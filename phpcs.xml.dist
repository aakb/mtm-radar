<?xml version="1.0" encoding="UTF-8"?>

<ruleset name="mtm-radar">
    <description>PHP CodeSniffer configuration for aakb/mtm-radar</description>

    <file>app/</file>
    <file>src/</file>
    <file>tests/</file>

		<exclude-pattern>app/App(Cache|Kernel)\.php</exclude-pattern>

		<!-- No warnings -->
		<arg value="n"/>
		<!-- Show progress -->
		<arg value="p"/>

    <rule ref="vendor/squizlabs/php_codesniffer/src/Standards/PSR2"/>
</ruleset>
