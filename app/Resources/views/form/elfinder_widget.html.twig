{#% extends '@FMElfinderBundle/elfinder_widget.html.twig' %#}

{% block elfinder_widget %}
    <input type="text" class="form-control" readonly {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %} data-type="elfinder-input-field" />
    {% if enable and instance is defined %}
        <script type="text/javascript" charset="utf-8">
            live('click', '[data-type="elfinder-input-field"][id="{{ id }}"]', function (event) {
                var childWin = window.open("{{path('elfinder', {'instance': instance, 'homeFolder': homeFolder })}}?id={{ id }}", "popupWindow", "height=450, width=900");
            });
            function live (eventType, elementQuerySelector, cb) {
                document.addEventListener(eventType, function (event) {
                    var qs = document.querySelectorAll(elementQuerySelector);
                    if (qs) {
                        var el = event.target, index = -1;
                        while (el && ((index = Array.prototype.indexOf.call(qs, el)) === -1)) {
                            el = el.parentElement;
                        }
                        if (index > -1) {
                            cb.call(el, event);
                        }
                    }
                })
            }
            function setValue(value, element_id) {
                document.querySelector('[data-type="elfinder-input-field"]' + (element_id ? '[id="'+ element_id +'"]': '')).value = value;
                document.querySelector('[data-type="elfinder-image-preview"]' + (element_id ? '[id="'+ element_id +'-image"]': '')).src = value;
            }
        </script>
    {% endif %}
    {% if value|default(null) %}
        <div class="image"><img data-type="elfinder-image-preview" id="{{ id }}-image" src="{{ value }}"/></div>
    {% endif %}
{% endblock %}
